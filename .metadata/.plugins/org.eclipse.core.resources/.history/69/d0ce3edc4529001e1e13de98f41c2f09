package basics_of_java.strings;

public class JavaLangMethods {
	public static void main(String args[]) {
		
		//subSequence method
		 String Str = "Rashmi Shukla";
	      // prints the subsequence from 0-7, exclusive 7th index
	     System.out.print("subsequence from 0-7: ");
	     System.out.println(Str.subSequence(0, 7));
	  
	     //contains
	     System.out.println(Str.contains("Rash"));
	     
	     //toCharArray
	     char[] name = Str.toCharArray();
	     System.out.println(name);
	     
	     //isEmpty
	     String str1 = "Rashmi";
	     String str2 = "";
	     System.out.println(str1.isEmpty());
	     System.out.println(str2.isEmpty());
	     
	     //split
	     String str = "23-04-19999";
	     String[] arrOfStr = str.split("-",2); //optional second arg
	     for (String a : arrOfStr)
	     System.out.println(a);
	     
	}
}
